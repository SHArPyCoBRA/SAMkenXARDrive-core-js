{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    /* Additional Checks */
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@types/arfs": [ "./types/arfs_Types" ],
      "@types/client": [ "./types/client_Types" ],
      "@types/gql": [ "./types/gql" ],
      
  }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
